@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3" id="form_container">
        <h2>Send Mail</h2>
        <form role="form" method="post" id="reused_form">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-sm-12 form-group">
                    <label asp-for="Input.Email">
                        Email:</label>
                    <input type="email" class="form-control" asp-for="Input.Email" >
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 form-group">
                    <label asp-for="Input.Message">
                        Message:</label>
                    <textarea class="form-control" type="textarea" asp-for="Input.Message" maxlength="6000" rows="7"></textarea>
                </div>
            </div>
            


            <div class="row">
                <div class="col-sm-12 form-group">
                    <button type="submit" class="btn btn-lg btn-primary pull-right" >Send →</button>
                </div>
            </div>

        </form>
    </div>
</div>